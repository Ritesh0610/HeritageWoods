@model HagitageWoodsMVC.Models.Products

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Products</h4>
<hr />

<div class="row bg-success text-light" style="opacity:0.75">
    <div class="col-md-6 border-dark">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cid" class="control-label">Category</label>
                <select asp-for="Cid" class="form-control" asp-items="ViewBag.Catname"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" required />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" required/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" required/>
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPic" class="control-label"></label>
                <input asp-for="ProductPic" accept="image/*" class="form-control" required/>
                <span asp-validation-for="ProductPic" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-6 text-light" style="font-size:x-large;">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-10">
                <h3>Please select Category as per your Need</h3>
                <table cellpadding="1" border="1">
                    <tr>
                        <th>Category Id&nbsp;&nbsp;</th>
                        <th>&nbsp;&nbsp;Type</th>
                    </tr>
                    <tr>
                        <td>1</td>
                        <td>Living Room</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Dining Room</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Bed Room</td>
                    <tr>
                        <td>4</td>
                        <td>Office</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

